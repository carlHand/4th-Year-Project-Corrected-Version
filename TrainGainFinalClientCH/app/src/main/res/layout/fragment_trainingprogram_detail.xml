<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomBar" >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:id="@+id/linearDetail"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/trainingprogram_detail_title"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textIsSelectable="true"
                tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
                 />

        <TextView
            android:id="@+id/trainingprogram_detail"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true"
            tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
             />

            <TextView
                android:id="@+id/trainingprogram_duration_title"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textIsSelectable="true"
                tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
                />

            <TextView
                android:id="@+id/trainingprogram_duration_info"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textIsSelectable="true"
                tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
                />

            <TextView
                android:id="@+id/trainingprogram_exercises"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textIsSelectable="true"
                tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
                />

            <TextView
                android:id="@+id/trainingprogram_hint"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textIsSelectable="true"
                tools:context="com.projectyr4x00091174.carl.traingain.TrainingProgramDetailFragment"
                />

        </LinearLayout>
</RelativeLayout>