<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpT"
        android:text="@string/cTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcsInfo"
        android:text="@string/cDesc"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/helpT"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showOption"
        android:id="@+id/showHide"
        android:layout_below="@+id/calcsInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dontWorryText"
        android:text="@string/dontWorry"
        android:layout_below="@+id/showHide" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/okBtn"
        android:id="@+id/dialogBtn"
        android:layout_below="@+id/dontWorryText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>