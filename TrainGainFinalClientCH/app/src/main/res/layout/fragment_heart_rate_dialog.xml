<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.projectyr4x00091174.carl.traingain.BMIDialog">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewBMI"
        android:layout_gravity="center_horizontal|top" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heartHeading"
                android:text="@string/heartRateLabel"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heartI"
                android:text="@string/heartIntro"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/heartHeading"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zoneH"
                android:text="@string/zoneOptions"
                android:layout_below="@+id/heartI"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone1H"
                android:text="@string/zone1Heading"
                android:layout_below="@id/zoneH"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone1D"
                android:text="@string/zone1Desc"
                android:layout_below="@id/zone1H"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone2H"
                android:text="@string/zone2Heading"
                android:layout_below="@id/zone1D"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone2D"
                android:text="@string/zone2Desc"
                android:layout_below="@id/zone2H"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone3H"
                android:text="@string/zone3Heading"
                android:layout_below="@id/zone2D"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone3D"
                android:text="@string/zone3Desc"
                android:layout_below="@id/zone3H"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone4H"
                android:text="@string/zone4Heading"
                android:layout_below="@id/zone3D"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zone4D"
                android:text="@string/zone4Desc"
                android:layout_below="@id/zone4H"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />
            </RelativeLayout>
        </ScrollView>
    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="@string/xBtn"
        android:id="@+id/xBt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>