                </TableRow>
                <TableRow android:id="@+id/tableRow6" android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView android:background="@drawable/table_cell_shape" android:padding="5dp" android:id="@+id/row6Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/class5"></TextView>
                    <TextView android:background="@drawable/table_cell_shape" android:padding="5dp" android:id="@+id/row6Text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/obese2"></TextView>

                </TableRow>
                <TableRow android:id="@+id/tableRow7" android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView android:background="@drawable/table_cell_shape" android:padding="5dp" android:id="@+id/row7Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/class6"></TextView>
                    <TextView android:background="@drawable/table_cell_shape" android:padding="5dp" android:id="@+id/row7Text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/obese3"></TextView>

                </TableRow>

                <TextView
