            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmiHeading"
                android:text="@string/BMIheading"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmiIntro"
                android:text="@string/BMIdesc"
                android:layout_below="@+id/bmiHeading"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BMIheading2"
                android:id="@+id/bmiHeading2"
                android:layout_below="@+id/bmiIntro"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BMIdesc2"
                android:id="@+id/bmiMean"
                android:layout_below="@+id/bmiHeading2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BMItableHeading"
                android:id="@+id/bmiTableHeading"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/bmiMean"
                android:textColor="@color/white"/>

